@model IEnumerable<Rocky.Models.Category>


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>

        <div class="col-6 text-right">
            <a class="btn btn-primary " asp-controller="Category" asp-action="Create">  
                Create New Category
            </a>
        </div>
    </div>
    
    <br/>
    <br />
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        S/NO
                    </th>
                    <th>
                        CategoryName
                    </th>
                    <th>
                        Category Order
                    </th>

                </tr>
                
            </thead>
            
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>

                    <td style="width: 50%">@obj.CategoryName</td>

                    <td style="width: 50%">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Edit">  
                                Edit
                            </a>
                            <a class="btn btn-danger mx-2 " asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Delete">  
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }

